# try to reuse existing chains as jump targets
chain forward {
	type filter hook forward priority filter; policy drop;

	# call ct-mark-filter manually since we don't traverse dispatch
	jump ct-mark-filter

	jump forward-zone-svc
	jump proto-filter

	# forward for local subnets
	ip saddr @set_private_net_v4 accept
	ip6 saddr @set_private_net_v6 accept

	# forward all marked traffic
	mark $META_MARK_FASTPATH_ID accept

	goto $DEFAULT_VERDICT
}
